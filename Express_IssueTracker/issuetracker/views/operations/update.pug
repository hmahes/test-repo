extends layout

block content
  .container.pt-1
    .row
      .col.text-center
        .jumbotron
          h1.text-primary Edit Issue Details 

        if error
          h3.text-danger= error

        .update-issue
          .card.card-body
            form(id='add', method='post', action='/issue/update/'+issue.id)
              .form-group
                .row
                  .col-2.text-right
                    label.mt-2(for='description') Description:
                  .col-8
                    input.form-control#title(name='description' value=issue.description)
              .form-group
                .row
                  .col-2.text-right
                    label.mt-2(for='severity') Severity:
                  .col-8
                    select#sev.form-control(name='severity')
                      option Minor
                      option Major
                      option Critical
              .form-group
                .row
                  .col-2.text-right
                    label.mt-2(for='status') Status:
                  .col-8
                    select#sev.form-control(name='status')
                      option Open
                      option In Progress
                      option Closed
              .form-group
                .row
                  .col-2.text-right
                    label.mt-2(for='resolveddate') Resolved Date:
                  .col-8
                    input.form-control#resolveddate(name='resolveddate' placeholder='dd-mm-yyyy')
              .form-group
                .row
                  .col
                    button.btn.btn-primary(type='submit') Submit